                            <param id="1" name="Comparison">2</param>
                            <param id="2" name="Value">3</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Add to" sid="470925162983883" type="System">
                            <param id="0" name="Variable">PistaAtual</param>
                            <param id="1" name="Value">1</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
